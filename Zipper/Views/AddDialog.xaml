<Window
    x:Class="Zipper.Views.AddDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Zipper.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Zipper.ViewModels"
    Title="{Binding Title}"
    Width="400"
    Height="200"
    d:DataContext="{d:DesignInstance Type=viewmodels:AddDialogViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="80*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="Files" Grid.Column="0" Grid.Row="0" />
        <TextBox x:Name="Files" HorizontalAlignment="Left" Width="300" Grid.Column="1" Grid.Row="0" />
        <Label Content="Override"  Grid.Column="0" Grid.Row="1" />
        <CheckBox VerticalAlignment="Center"  Grid.Column="1" Grid.Row="1" IsChecked="{Binding Overwrite}" />
        <Label Content="Compression" Grid.Column="0" Grid.Row="2" />
        <ComboBox Grid.Column="1" Grid.Row="2" ItemsSource="{Binding GetCompressionValues}" />
        <Label Content="Entry Level" Grid.Column="0" Grid.Row="3" />
        <Label Content="Directory" Grid.Column="0" Grid.Row="4" />
        <TextBox x:Name="Directory" HorizontalAlignment="Left" Width="300" Grid.Column="1" Grid.Row="4" />
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="5" >
            <Button Content="OK" Margin="10"  Command="{Binding OKCommand}" />
            <Button Content="Cancel" Margin="10"  Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>
