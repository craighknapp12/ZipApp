<Window
    x:Class="Zipper.Views.AddDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Zipper.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Zipper.ViewModels"
    Title="{Binding Title}"
    Width="400"
    Height="200"
    d:DataContext="{d:DesignInstance Type=viewmodels:AddDialogViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="80*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Content="Files" />
        <TextBox
            x:Name="Files"
            Grid.Row="0"
            Grid.Column="1"
            Width="300"
            HorizontalAlignment="Left" />
        <Label
            Grid.Row="1"
            Grid.Column="0"
            Content="Override" />
        <CheckBox
            x:Name="Override"
            Grid.Row="1"
            Grid.Column="1"
            VerticalAlignment="Center"
            IsChecked="{Binding Overwrite}" />
        <Label
            Grid.Row="2"
            Grid.Column="0"
            Content="Compression" />
        <ComboBox
            x:Name="Compression"
            Grid.Row="2"
            Grid.Column="1"
            ItemsSource="{Binding GetCompressionValues}" />
        <Label
            Grid.Row="3"
            Grid.Column="0"
            Content="Entry Level" />
        <TextBox
            x:Name="EntryLevel"
            Grid.Row="3"
            Grid.Column="1"
            Width="300"
            HorizontalAlignment="Left" />

        <Label
            Grid.Row="4"
            Grid.Column="0"
            Content="Directory" />
        <TextBox
            x:Name="Directory"
            Grid.Row="4"
            Grid.Column="1"
            Width="300"
            HorizontalAlignment="Left" />
        <StackPanel
            Grid.Row="5"
            Grid.Column="1"
            Orientation="Horizontal">
            <Button
                Margin="10"
                Command="{Binding OKCommand}"
                Content="OK" />
            <Button
                Margin="10"
                Command="{Binding CancelCommand}"
                Content="Cancel" />
        </StackPanel>
    </Grid>
</Window>
