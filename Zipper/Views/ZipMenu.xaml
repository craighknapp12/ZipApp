<UserControl
    x:Class="Zipper.Views.ZipMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ZippyLibraryViewModels="clr-namesypace:ZippyLibrary.ViewModels;assembly=ZippyLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:ZippyLibrary.ViewModels;assembly=ZippyLibrary"
    d:DataContext="{d:DesignInstance Type=viewmodels:ZipMenuViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="_File">
                <MenuItem
                    x:Name="NewCommand"
                    Command="{Binding NewCommand}"
                    Header="New"
                    InputGestureText="Ctrl+N" />
                <MenuItem
                    x:Name="OpenCommand"
                    Command="{Binding OpenCommand}"
                    Header="Open"
                    InputGestureText="Ctrl+O" />
                <Separator />
                <MenuItem
                    x:Name="SaveCommand"
                    Command="{Binding SaveCommand}"
                    Header="Save"
                    InputGestureText="Ctrl+S" />
                <MenuItem
                    x:Name="SaveAsCommand"
                    Command="{Binding SaveAsCommand}"
                    Header="Save As" />
                <Separator />
                <MenuItem
                    x:Name="ExitCommand"
                    Command="{Binding ExitCommand}"
                    Header="Exit" />
            </MenuItem>
            <MenuItem Header="_Edit" />
            <MenuItem Header="_View" />
            <MenuItem Header="_Help">
                <MenuItem
                    x:Name="AboutCommand"
                    Command="{Binding AboutCommand}"
                    Header="About" />
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
